    function buildNewsAction(){        
        var newsUrl = 'https://news.jnu.edu.cn/wbtyym/xxxw.html'; 
        //var newsUrl = 'https://webapi4.jnu.edu.cn/xxxw.html'; 
        //var newsUrl = 'https://www.jnu.edu.cn/2022/0309/c7025a683313/page.htm';
        $.get(        
            newsUrl,
