// 小尺寸图片清除 img-responsive class
function clearSmallResp(){
    try{
        var small_size = 50;
        $(".informationContent img").each(function(idx,el){
            var img = new Image();
            img.src = $(el).attr('src');
            // console.log(img.src);
            if(img.complete){
                if(img.width < small_size){
                    $(el).removeClass('img-responsive');
                }
            }else{
                img.onload = function(){
                    if(img.width < small_size){
                        $(el).removeClass('img-responsive');
                    }
                }
            }
        });
    }catch(e){
        console.log(e.message);
    }
}

